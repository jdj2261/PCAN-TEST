if __name__ == "__main__":
    """     
    main 
    The user enters the desired angle
    """
    uc = UmdCan()
    # while True:

    while True:
        try:
            degree = int(input("원하는 각도를 입력하세요: "))
            # raise raise_exception("test")
            while True:
                uc.run(degree)
        # except CustomException as e:
        #     print(e)
        except KeyboardInterrupt:
            print("\n프로그램 종료...")
            exit(0)
        except NameError:
            print("잘못된 입력입니다.")
        
